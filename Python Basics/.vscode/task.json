{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run active Python file (Terminal.app)",
      "type": "shell",
      "command": "osascript",
      "args": [
        "-e",
        "tell application \"Terminal\" to do script \"python3 \\\"${file}\\\"\""
      ],
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
